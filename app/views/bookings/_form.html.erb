<div class="d-flex flex-column justify-content-between flex-grow-1">
  <%= simple_form_for [pig, booking] do |f| %>
    <div class="d-flex flex-column justify-content-around">
      <div class="form-inputs">
        <%= f.input :start_date, as: :date, html5: true , class:"form-control mb-3" %>
      </div>
      <div class="form-inputs">
        <%= f.input :end_date, as: :date, html5: true, class:"form-control mb-3" %>
      </div>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Book now", class: "btn btn-flat", style: "margin: 0 auto" %>
    </div>
  <% end %>
</div>
