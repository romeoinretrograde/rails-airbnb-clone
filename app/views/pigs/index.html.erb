<div class="background">
  <div class="container index-container">
    <div class="header">
      <h1>Pick your piggy!</h1>
      <h6>They're so excited to meet you!</h6>
    </div>
  </div>

  <div class="searchbar">
      <%= form_with url: pigs_path, method: :get, class: "d-flex" do %>
        <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Look for piglets..."
        %>
        <%= submit_tag "Search", class:"btn-pig" %>
        <% end %>
  </div>

    <div class="cards-container">
      <% @pigs.each do |pig| %>
        <%= link_to pig_path(pig["id"]), class: "d-flex justify-content-center" do %>
          <div class="card-pig card-shadow">
            <div class="pig-image">
              <%= cl_image_tag pig.photo.key %>
            </div>
            <div class="card-pig-info">
              <div class="pig-name-details">
                <h2 style="text-align: left"><%= pig.name %></h2>
                <p style="text-align: left"><%= "#{pig.age} months · #{pig.breed}" %></p>
              </div>
              <div class="pig-price">
                <h2><%= "#{pig.price} €" %></h2>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
